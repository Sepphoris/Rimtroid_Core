<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!--===============Cryo Burn Def===============-->

	<HediffDef ParentName="InjuryBase">
    <defName>RT_CryoBurn</defName>
    <label>frostburn</label>
    <labelNoun>Frostburn</labelNoun>
    <description>A burn caused by intense exposure to cold.</description>
    <comps>
      <li Class="HediffCompProperties_TendDuration">
        <labelTendedWell>bandaged</labelTendedWell>
        <labelTendedWellInner>tended</labelTendedWellInner>
        <labelSolidTendedWell>tended</labelSolidTendedWell>
      </li>
      <li Class="HediffCompProperties_Infecter">
        <infectionChance>0.30</infectionChance>
      </li>
      <li Class="HediffCompProperties_GetsPermanent">
        <permanentLabel>frostburn scar</permanentLabel>
      </li>
    </comps>
    <injuryProps>
      <painPerSeverity>0.01875</painPerSeverity>
      <averagePainPerSeverityPermanent>0.00625</averagePainPerSeverityPermanent>
      <canMerge>true</canMerge>
      <destroyedLabel>Shattered</destroyedLabel>
      <destroyedOutLabel>Shattered</destroyedOutLabel>
    </injuryProps>
  </HediffDef>

<!--===============Cryo Buildup Def===============-->

  <HediffDef>
		<defName>RT_CryoBuildup</defName>
		<hediffClass>RT_Core.Hediff_CryoBuildup</hediffClass>
		<defaultLabelColor>(0.7, 1.0, 0.7)</defaultLabelColor>
		<label>frostbite</label>
		<lethalSeverity>1</lethalSeverity>
		<description>A sudden decrease in body temperature caused by a cryogenic weapon. Temperatures will return to normal shortly, but permanent injury can occur if temperatures continue to be too low.</description>

		<comps>
			<li Class="HediffCompProperties_SeverityPerDay">
				<severityPerDay>-28</severityPerDay>
			</li>
		</comps>
		<stages>
			<li>
				<label>minor</label>
				<minSeverity>0</minSeverity>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.1</offset>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.2</offset>
					</li>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.1</offset>
					</li>
				</capMods>
			</li>
			<li>
				<label>moderate</label>
				<minSeverity>0.35</minSeverity>
				<painOffset>0.15</painOffset>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.3</offset>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.5</offset>
					</li>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.15</offset>
					</li>
				</capMods>
			</li>
			<li>
				<label>serious</label>
				<minSeverity>0.70</minSeverity>
				<lifeThreatening>true</lifeThreatening>
				<painOffset>0.30</painOffset>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.3</offset>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.5</offset>
					</li>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.5</offset>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>
	

  <HediffDef>
		<defName>RT_LatchedMetroid</defName>
		<hediffClass>RT_Core.Hediff_LatchedMetroid</hediffClass>
		<defaultLabelColor>(0.7, 1.0, 0.7)</defaultLabelColor>
		<label>latched metroid</label>
		<description>latched metroid.</description>
	</HediffDef>

  <HediffDef>
		<defName>RT_MetroidAbsorbEnergy</defName>
		<hediffClass>RT_Core.Hediff_MetroidAbsorbEnergy</hediffClass>
		<defaultLabelColor>(0.7, 1.0, 0.7)</defaultLabelColor>
		<label>metroid is absorbing energy</label>
		<description>metroid is absorbing energy.</description>
	</HediffDef>
</Defs>